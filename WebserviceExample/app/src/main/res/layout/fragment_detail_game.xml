<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".DetailGameFragment">
    <TextView
            android:text="GameBox"
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="#0131B4"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="#FFFFFF" android:paddingStart="10dp"
            android:gravity="center_vertical" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Game Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textColor="#00D4FE" android:gravity="center_vertical" android:textSize="40sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.45"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" tools:src="@tools:sample/avatars" android:id="@+id/detailGameImage"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/DetailGameName"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginStart="8dp"
            android:textStyle="bold"/>
    <TextView
            android:text="Type:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetailGameType"
            app:layout_constraintTop_toBottomOf="@+id/DetailGameName"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            android:layout_marginStart="8dp" android:textStyle="bold"/>
    <TextView
            android:text="Nb players:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetailGameNbPlayers"
            app:layout_constraintTop_toBottomOf="@+id/DetailGameType"
            app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginStart="8dp"
            android:textStyle="bold"/>
    <TextView
            android:text="Year:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetailGameYear" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/DetailGameNbPlayers"
            app:layout_constraintStart_toStartOf="@+id/guideline4" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetailGameDescription" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/detailGameImage" android:layout_marginTop="8dp"
            android:paddingLeft="8dp" android:paddingRight="8dp"/>
    <Button
            android:text="DO YOU WANT TO KNOW MORE?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetailGameButtonKnowMore"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DetailGameDescription"
            app:layout_constraintVertical_bias="0.905"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetailGameDataName" app:layout_constraintStart_toEndOf="@+id/DetailGameName"
            android:layout_marginStart="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetailGameDataType" app:layout_constraintStart_toEndOf="@+id/DetailGameType"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/DetailGameDataName"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetailGameDataNbPlayers" app:layout_constraintStart_toEndOf="@+id/DetailGameNbPlayers"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/DetailGameDataType"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetailGameDataYear" app:layout_constraintStart_toEndOf="@+id/DetailGameYear"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/DetailGameDataNbPlayers"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Wanna Play? Enter your name please"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/DetailGameDescription"
            android:visibility="invisible"/>

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" tools:src="@tools:sample/avatars"
            android:id="@+id/detail_game_playButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/DetailGameButtonKnowMore"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>