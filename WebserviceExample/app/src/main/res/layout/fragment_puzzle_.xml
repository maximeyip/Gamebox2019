<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Puzzle_Fragment">
    <ImageView
            android:layout_width="618px"
            android:layout_height="618px" tools:src="@drawable/grid" android:id="@+id/grid"
            android:layout_gravity="center"/>
    <TextView
            android:text="Sliding Puzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/SlidingPuzzle_id" android:textSize="26sp"
            android:layout_gravity="center_horizontal" android:layout_marginTop="60dp"/>
    <ImageButton
            android:layout_width="200px"
            android:layout_height="200px" tools:src="@tools:sample/avatars[0]" android:id="@+id/image0"
            android:layout_gravity="center" android:layout_marginEnd="204px" android:layout_marginBottom="204px"/>
    <ImageButton
            android:layout_width="200px"
            android:layout_height="200px" tools:src="@tools:sample/avatars[0]" android:id="@+id/image1"
            android:layout_gravity="center" android:layout_marginEnd="204px"/>
    <ImageButton
            android:layout_width="200px"
            android:layout_height="200px" tools:src="@tools:sample/avatars[0]" android:id="@+id/image2"
            android:layout_gravity="center" android:layout_marginEnd="204px" android:layout_marginTop="204px"/>
    <ImageButton
            android:layout_width="200px"
            android:layout_height="200px" tools:src="@tools:sample/avatars[0]" android:id="@+id/image3"
            android:layout_gravity="center" android:layout_marginBottom="204px"/>
    <ImageButton
            android:layout_width="200px"
            android:layout_height="200px" tools:src="@tools:sample/avatars[0]" android:id="@+id/image4"
            android:layout_gravity="center"/>
    <ImageButton
            android:layout_width="200px"
            android:layout_height="200px" tools:src="@tools:sample/avatars[0]" android:id="@+id/image5"
            android:layout_gravity="center" android:layout_marginTop="204px"/>
    <ImageButton
            android:layout_width="200px"
            android:layout_height="200px" tools:src="@tools:sample/avatars[0]" android:id="@+id/image6"
            android:layout_gravity="center" android:layout_marginLeft="204px" android:layout_marginBottom="204px"/>
    <ImageButton
            android:layout_width="200px"
            android:layout_height="200px" tools:src="@tools:sample/avatars[0]" android:id="@+id/image7"
            android:layout_gravity="center" android:layout_marginLeft="204px"/>
    <ImageButton
            android:layout_width="200px"
            android:layout_height="200px" tools:src="@tools:sample/avatars[0]" android:id="@+id/image8"
            android:layout_gravity="center" android:layout_marginStart="204px" android:layout_marginTop="204px"/>
</FrameLayout>